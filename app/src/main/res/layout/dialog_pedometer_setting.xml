<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/dialogMessageTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="흥들 횟수를 선택해주세요"
        android:textColor="#000000"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/pedometerCountNP"/>

    <NumberPicker
        android:id="@+id/pedometerCountNP"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialogMessageTV" />

    <TextView
        android:id="@+id/pedometerCountTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="회"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/pedometerCountNP"
        app:layout_constraintLeft_toRightOf="@+id/pedometerCountNP"
        app:layout_constraintTop_toTopOf="@+id/pedometerCountNP" />

</androidx.constraintlayout.widget.ConstraintLayout>