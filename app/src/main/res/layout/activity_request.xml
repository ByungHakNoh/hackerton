<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:textColor="#000000"
        android:id="@+id/requestUserName"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="92dp"
        android:layout_marginTop="128dp"
        android:text="김노바"
        android:textSize="17sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:textColor="#000000"
        android:id="@+id/guideText"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textSize="17sp"
        android:text="님 으로부터 흥들기 요청 도착"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/requestUserName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/requestUserName"/>

    <ImageView
        android:id="@+id/heungLogo"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginTop="128dp"
        android:src="@drawable/hackerton_logo"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/upHeungTV"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="72dp"
        android:text="흥들기"
        android:textColor="#388e3c"
        android:textSize="23dp"
        android:textStyle="bold"
        android:gravity="center|center_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heungLogo"/>

    <TextView
        android:id="@+id/downHeungTV"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginRight="76dp"
        android:text="흥내리기"
        android:textStyle="bold"
        android:textColor="#ff3d00"
        android:textSize="23dp"
        android:gravity="center|center_vertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heungLogo"/>

</androidx.constraintlayout.widget.ConstraintLayout>